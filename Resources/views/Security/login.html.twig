{% extends "SumoCodersFrameworkUserBundle::empty_layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block header_title %}
    <h2>
        {{ 'header.title.login'|trans({},'messages')|capitalize }}
    </h2>
{% endblock %}

{% block fos_user_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        {% if error %}
            <div class="alert alert-info">
                {{ error|trans }}
            </div>
        {% endif %}

        <fieldset>
            <div class="form-group">
                <label class="control-label" for="username">
                    {{ 'security.login.username'|trans }}<abbr title="{{ 'forms.errors.fieldIsRequired'|trans({},'messages')|capitalize }}">*</abbr>
                </label>

                <div class="input-group">
                    <div class="input-group-addon username icon icon-user"></div>
                    <input value="{{ last_username }}" id="username" name="_username" type="text" class="form-control input-lg" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="password">
                    {{ 'security.login.password'|trans }}<abbr title="{{ 'forms.errors.fieldIsRequired'|trans({},'messages')|capitalize }}">*</abbr>
                </label>

                <div class="input-group">
                    <div class="input-group-addon password icon icon-lock"></div>
                    <input type="password" value="" id="password" name="_password" class="form-control input-lg" required />
                </div>
            </div>

            <div class="checkbox">
                <label for="remember_me" class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>

            <button type="submit" id="submit" name="_submit" class="btn btn-lg btn-block">
                {{ 'security.login.submit'|trans }}<i class="icon iconArrowWhiteRight"></i>
            </button>

            <div class="forgotPassword">
                <small>
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'forms.login.action.forgotPassword'|trans({},'messages')|capitalize }}</a>
                </small>
            </div>
        </fieldset>
    </form>
{% endblock fos_user_content %}
